# MaudeView Watchlist Manager Agent Configuration

# ============================================================================
# CONTROLLER CONNECTION (used by the MCP server to talk to tv_controller)
# ============================================================================
CONTROLLER_BIND_ADDR=127.0.0.1:8188

# ============================================================================
# TV CONTROLLER SETTINGS (used when running tv_controller locally)
# ============================================================================

# Auto-launch browser when starting tv_controller
CONTROLLER_LAUNCH_BROWSER=true

# CDP (Chrome DevTools Protocol) settings
CHROMIUM_CDP_ADDRESS=127.0.0.1
CHROMIUM_CDP_PORT=9220

# Initial URL to open when browser starts
CHROMIUM_START_URL=https://www.tradingview.com/

# Browser profile directory (keeps test browsing isolated)
CHROMIUM_PROFILE_DIR=./chromium-profile

# Filter chart tabs for controller operations
CONTROLLER_TAB_URL_FILTER=tradingview.com

# Per-call JS evaluation timeout in milliseconds
CONTROLLER_EVAL_TIMEOUT_MS=5000

# Controller logging
CONTROLLER_LOG_LEVEL=info
CONTROLLER_LOG_FILE=logs/tv_controller.log
